.post
  .entry
    %h2.title 
      %a Lista zadań
    %table
      %tr.meta
        %td id
        %td name
        %td workflow_state
        %td source
        %td output
        %td extension_name
        %td timeout
        %td end_of_data
        %td &nbsp;
      - Task.all.each do |task|
        %tr
          %td= task.id
          %td= task.name
          %td= task.workflow_state
          %td= task.source
          %td= task.output
          %td= task.extension_name
          %td= task.timeout
          %td= task.end_of_data
          %td
            %a{ :href => "/edit_task/#{task.id}" } Edytuj
            %a{ :href => "/delete_task/#{task.id}" } Usuń
    %a{ :href => '/new_task' } Nowe zadanie

#container
